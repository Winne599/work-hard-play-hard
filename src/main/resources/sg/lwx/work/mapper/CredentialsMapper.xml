<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="sg.lwx.work.mapper.CredentialsMapper">

    <resultMap id="BaseResultMap" type="sg.lwx.work.domain.Credentials">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="address" property="address" jdbcType="VARCHAR"/>
        <result column="privateKey" property="privateKey" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        `id`, `address`, `private_key`, `create_time`
    </sql>


    <select id="selectPrivateKeyByAddress" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"></include>
        from credentials
        where address = #{address}
    </select>





</mapper>